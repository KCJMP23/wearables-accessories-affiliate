# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================

# Supabase Project URL (get from your Supabase dashboard)
SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase Anon Key (get from your Supabase dashboard)
SUPABASE_ANON_KEY=your-supabase-anon-key

# Supabase Service Role Key (get from your Supabase dashboard)
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Database URL for Prisma (Supabase PostgreSQL connection)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# =============================================================================
# PAYLOAD CMS CONFIGURATION
# =============================================================================

# Payload Secret Key (generate a secure random string)
PAYLOAD_SECRET=your-secure-payload-secret-key-here

# Payload Public Server URL (your Vercel deployment URL)
PAYLOAD_PUBLIC_SERVER_URL=https://your-payload-cms.vercel.app

# =============================================================================
# AMAZON ASSOCIATES CONFIGURATION
# =============================================================================

# Amazon Associates API Access Key ID
AMAZON_ACCESS_KEY_ID=your-amazon-access-key-id

# Amazon Associates API Secret Access Key
AMAZON_SECRET_ACCESS_KEY=your-amazon-secret-access-key

# Amazon Associates API Region
AMAZON_REGION=us-east-1

# Amazon Associates Partner Tag (your tracking ID)
AMAZON_PARTNER_TAG=your-partner-tag

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================

# OpenAI API Key
OPENAI_API_KEY=your-openai-api-key

# Anthropic Claude API Key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Leonardo.AI API Key
LEONARDO_API_KEY=your-leonardo-api-key

# =============================================================================
# EMAIL SERVICES
# =============================================================================

# Resend API Key (for email notifications)
RESEND_API_KEY=your-resend-api-key

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================

# NextAuth Secret (generate a secure random string)
NEXTAUTH_SECRET=your-nextauth-secret-key

# NextAuth URL (your production domain)
NEXTAUTH_URL=https://your-domain.com

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Node Environment
NODE_ENV=development

# =============================================================================
# OPTIONAL: ANALYTICS & MONITORING
# =============================================================================

# Google Analytics ID (optional)
NEXT_PUBLIC_GA_ID=your-google-analytics-id

# Vercel Analytics ID (optional)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-vercel-analytics-id 